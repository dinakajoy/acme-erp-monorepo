// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name       String
  email      String    @unique
  phone      String
  gender     String
  department String
  role       String
  street     String
  town       String
  state      String
  country    String
  password   String
  createdBy  String
  updatedBy  String
  finance    Finance[]
}

model Client {
  id            String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdBy     String
  updatedBy     String
  email         String @unique
  name          String @unique
  phone         String
  address       String
  company       String
  contactPerson String
  job           Job[]
}

model Job {
  id        String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdBy String
  updatedBy String
  name      String
  fileNo    String
  startDate String
  endDate   String
  status    String
  client    Client @relation(fields: [clientId], references: [id])
  clientId  String @db.ObjectId
}

model Finance {
  id            String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  requester     String
  contactPerson String
  status        String
  completed     String
  user          User   @relation(fields: [userId], references: [id])
  userId        String @db.ObjectId
  createdBy     String
  updatedBy     String
}

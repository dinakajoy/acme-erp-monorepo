{
  "extends": "tsconfig/server.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "src/*": ["src/*"]
    },
  },
  "include": ["./src/"],
  "exclude": ["node_modules", ".turbo", "coverage", "dist", "src/**/*.test.ts"]
}
